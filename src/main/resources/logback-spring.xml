<configuration>
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <property name="LOG_DIR" value="${LOG_DIR:-logs}"/>

    <!-- Root -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="APP"/>
    </root>

    <!-- app.log (ghi chung) -->
    <appender name="APP" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/app.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Chat -->
    <appender name="CHAT" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/chat.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.boilerplate.feature.chat" level="DEBUG" additivity="false">
        <appender-ref ref="CHAT"/>
    </logger>

    <!-- Auth -->
    <appender name="AUTH" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/auth.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.boilerplate.feature.auth" level="DEBUG" additivity="false">
        <appender-ref ref="AUTH"/>
    </logger>

    <!-- HTTP -->
    <appender name="HTTP" class="ch.qos.logback.core.FileAppender">
        <file>${LOG_DIR}/http.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="com.boilerplate.common.filter" level="DEBUG" additivity="false">
        <appender-ref ref="HTTP"/>
    </logger>
</configuration>
